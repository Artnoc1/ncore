#include <cxxtest/TestSuite.h>
#include <Logger.h>
#include <vector>
#include <string>

using std::string;
using std::vector;

class LoggerTestSuite: public CxxTest::TestSuite
{
  Logger log;
public:
  void setUp()
  {
  }

  void testEmpty( void )
  {
    TS_ASSERT_EQUALS( log.size(), 0 );
  }
  void testAdd( void )
  {
    log.add("Test1");
    log.add("Test12");
    log.add("Test123");
    TS_ASSERT_EQUALS( log.size(), 3 );
    TS_ASSERT_EQUALS( log.at(0), "Test1" );
  }
};
