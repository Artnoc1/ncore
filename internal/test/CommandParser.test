#include <cxxtest/TestSuite.h>
#include <LineParser.h>
#include <vector>
#include <string>

using std::string;
using std::vector;

class LineParserTestSuite: public CxxTest::TestSuite
{
public:
  LineParserTestSuite(void)
  {
  }

  void testEmpty( void )
  {
    LineParser parser;
    parser.parse(string());

    TS_ASSERT_EQUALS( parser.size(), 0 );
  }
  void testSingle( void )
  {
    LineParser parser;
    string commands("test");
    parser.parse(commands);

    TS_ASSERT_EQUALS( parser.size(), 1 );
    TS_ASSERT_EQUALS( parser[0], commands );
  }
  void testMany( void )
  {
    LineParser parser;
    string commands("this is a test of many words");
    parser.parse(commands);

    TS_ASSERT_EQUALS( parser.size(), 7 );
    TS_ASSERT_EQUALS( parser.at(0), string("this") );
    TS_ASSERT_EQUALS( parser.at(6), string("words") );
  }
};
